<%= form_for activity do |af| %>
  <%= af.label :name %>:
  <%= af.text_field :name, autofocus: true %><br>

  <%= af.label :organizer %>:
  <%= af.select :organizer_id, Friend.all.map{ |f| [f.name, f.id]}, {}, {} %>

  <%= af.fields_for :friends do |ff| %>
    <%= ff.label :friends %>:
    <%= ff.select :friend_id, Friend.all.map{ |f| [f.name, f.id]}, {}, {multiple: true} %>
  <% end %>
  <br>
  <%= af.submit %>
<% end %>