<div class="box">
  <h2><%= label %></h2>

  <ul class="list">
    <% activities.each do |a| %>
      <li>
        <%= link_to activity_path(a) do %>
         <span class="listed left"><%= a.name %></span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to t('helpers.submit.create', model: t('activerecord.model.activity')), new_activity_path(organizer_id: args[:organizer_id], participant_ids: args[:participant_ids]), class: "btn btn-success" %>
</div>