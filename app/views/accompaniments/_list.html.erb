<div class="box">
  <h2><i class="glyphicon glyphicon-ok"></i> <%= t('activerecord.model.accompaniments') %></h2>

  <ul class="list">
    <% accompaniments.each do |a| %>
      <li>
        <%= link_to accompaniment_path(a) do %>
         <span class="listed left"><%= a.subject %></span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to t('helpers.submit.create', model: t('activerecord.model.accompaniment')), new_accompaniment_path(friend_id: friend_id, activity_id: activity_id), class: "btn btn-success" %>
</div>