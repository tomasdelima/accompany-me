<% content_for :page, 'edit friend' %>

<div class="col-md-10">

  <div class="friends">
    <h2>Form for friend</h2>

    <% params[:errors].try(:each) do |error| %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert" href="#">Ã—</a>
        <%= "<strong>#{error[0].capitalize}</strong>: #{error[1][0]}".html_safe %>
      </div>
    <% end %>

    <%= form_for @friend do |f| %>
      <ul class="list-unstyled details">
        <li>
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true %>
        </li>

        <li>
          <%= f.label :declared? %>
          <%= f.check_box :declared, autofocus: true %>
        </li>

        <li>
          <%= f.label :last_accompanied %>
          <%= f.date_select :last_accompanied, {include_blank: true} %>
        </li>

        <li class="date-time">
          <%= f.label :accompaniment_frequency %>
          <%= f.number_field :accompaniment_frequency %>
          days
        </li>
      </ul>

      <%= f.submit class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
