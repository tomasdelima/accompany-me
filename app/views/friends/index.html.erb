<div class="box">
  <h2><%= t('activerecord.model.friends') %></h2>

  <ul class="list">
    <% current_user.friends.each do |f| %>
      <li>
        <%= link_to friend_path(f) do %>
          <span class="listed left"><%= f.name %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to t('helpers.submit.create', model: t('activerecord.model.friend')), new_friend_path(current_user), class: "btn btn-success" %>
</div>